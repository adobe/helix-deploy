{
  "name": "@adobe/helix-deploy",
  "version": "4.6.0",
  "description": "Library and Commandline Tools to build and deploy OpenWhisk Actions",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-deploy.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/helix-deploy/issues"
  },
  "keywords": [
    "openwhisk"
  ],
  "main": "index.js",
  "bin": {
    "hedy": "src/index.js"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "nyc mocha -i -g Integration",
    "test-ci": "npm run lint && nyc mocha -R xunit -O output=junit/test-results.xml -i -g Integration && codecov",
    "integration-ci": "nyc mocha -R xunit -O output=junit/integration-results.xml -g Integration && codecov",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "@adobe/helix-universal": ">=1.2.1"
  },
  "dependencies": {
    "@adobe/fastly-native-promises": "1.23.0",
    "@adobe/helix-fetch": "2.2.0",
    "@aws-sdk/client-apigatewayv2": "3.16.0",
    "@aws-sdk/client-lambda": "3.16.0",
    "@aws-sdk/client-s3": "3.16.0",
    "@aws-sdk/client-ssm": "3.16.0",
    "@azure/arm-appservice": "7.0.0",
    "@azure/ms-rest-nodeauth": "3.0.9",
    "@google-cloud/functions": "1.1.4",
    "@google-cloud/secret-manager": "3.6.1",
    "archiver": "5.3.0",
    "chalk": "4.1.1",
    "dotenv": "9.0.2",
    "express": "4.17.1",
    "fs-extra": "10.0.0",
    "isomorphic-git": "1.8.2",
    "openwhisk": "3.21.3",
    "proxyquire": "2.1.3",
    "semver": "7.3.5",
    "webpack": "5.37.0",
    "yargs": "17.0.1"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.5",
    "@adobe/helix-shared-wrap": "1.0.0",
    "@adobe/helix-status": "9.1.6",
    "@adobe/helix-universal-logger": "1.0.3",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "codecov": "3.8.2",
    "eslint": "7.26.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.23.2",
    "ghooks": "2.0.4",
    "lint-staged": "11.0.0",
    "mocha": "github:trieloff/mocha#issue/4526",
    "mocha-junit-reporter": "2.0.0",
    "nock": "13.0.11",
    "nyc": "15.1.0",
    "semantic-release": "17.4.3",
    "sinon": "10.0.0",
    "yauzl": "2.10.0"
  },
  "engines": {
    "node": ">=12.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "homepage": "https://github.com/adobe/helix-deploy#readme"
