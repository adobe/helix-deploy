{
  "name": "@adobe/openwhisk-action-builder",
  "version": "0.5.0",
  "description": "Library and Commandline Tools to build and deploy OpenWhisk Actions",
  "license": "Apache-2.0",
  "repository": "https://github.com/adobe/openwhisk-action-builder",
  "bugs": "https://github.com/adobe/openwhisk-action-builder/issues",
  "keywords": [
    "openwhisk"
  ],
  "main": "index.js",
  "bin": {
    "wsk-builder": "src/index.js"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "test": "nyc --reporter=text --reporter=lcov mocha",
    "test-ci": "npm run lint && npm run test && codecov",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "dependencies": {
    "@tripod/bunyan-syslog": "^0.3.2",
    "archiver": "^3.0.0",
    "bunyan": "^1.8.12",
    "bunyan-loggly": "^1.4.1",
    "chalk": "^2.4.1",
    "dotenv": "^7.0.0",
    "fs-extra": "^7.0.1",
    "openwhisk": "^3.17.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "serverless-http": "^1.9.1",
    "webpack": "^4.29.6",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "ajv": "^6.10.0",
    "codecov": "^3.2.0",
    "commitizen": "^3.0.7",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.11.0",
    "ghooks": "^2.0.4",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^13.3.0",
    "semantic-release": "^15.13.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
