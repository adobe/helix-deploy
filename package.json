{
  "name": "@adobe/helix-deploy",
  "version": "1.11.0",
  "description": "Library and Commandline Tools to build and deploy OpenWhisk Actions",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-deploy.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/helix-deploy/issues"
  },
  "keywords": [
    "openwhisk"
  ],
  "main": "index.js",
  "bin": {
    "hedy": "src/index.js"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 50 --statements 50 --lines 50 mocha -i -g Integration",
    "test-ci": "npm run lint && nyc --reporter=text --reporter=lcov --check-coverage --branches 50 --statements 60 --lines 60 mocha -R xunit -O output=junit/test-results.xml -i -g Integration && codecov",
    "integration-ci": "nyc --reporter=lcov mocha -R xunit -O output=junit/integration-results.xml -g Integration && codecov",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@adobe/fastly-native-promises": "1.19.1",
    "@adobe/helix-epsagon": "1.5.5",
    "@adobe/helix-fetch": "^1.7.0",
    "@aws-sdk/client-apigatewayv2": "^1.0.0-rc.8",
    "@aws-sdk/client-lambda": "^1.0.0-rc.8",
    "@aws-sdk/client-s3": "^1.0.0-rc.8",
    "@aws-sdk/client-ssm": "^1.0.0-rc.8",
    "@azure/arm-appservice": "^6.1.0",
    "@azure/ms-rest-nodeauth": "^3.0.6",
    "archiver": "^5.0.0",
    "chalk": "^4.0.0",
    "dotenv": "^8.0.0",
    "fs-extra": "^9.0.0",
    "isomorphic-git": "1.8.0",
    "node-fetch": "^2.6.1",
    "openwhisk": "^3.17.0",
    "semver": "^7.0.0",
    "webpack": "5.10.2",
    "yargs": "^16.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "codecov": "3.8.1",
    "eslint": "7.14.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-header": "3.1.0",
    "eslint-plugin-import": "2.22.1",
    "express": "4.17.1",
    "ghooks": "2.0.4",
    "lint-staged": "10.5.2",
    "mocha": "trieloff/mocha#issue/4526",
    "mocha-junit-reporter": "2.0.0",
    "nock": "13.0.5",
    "nyc": "15.1.0",
    "semantic-release": "17.3.0",
    "yauzl": "2.10.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "homepage": "https://github.com/adobe/helix-deploy#readme"
}
